<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:property-placeholder location="database/database.properties"/>

    <bean id="hibernateProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="properties">
            <props>
                <prop key="hibernate.dialect">${nexus.production.hibernate.dialect}</prop>
                <prop key="hibernate.hbm2ddl.auto">${nexus.production.hibernate.hbm2ddl_auto}</prop>
                <prop key="hibernate.current_session_context_class">${nexus.production.hibernate.current_session_context_class}</prop>
                <prop key="hibernate.show_sql">${nexus.production.hibernate.show_sql}</prop>
            </props>
        </property>
    </bean>

    <bean id="hibernatePackageToScan" class="java.lang.String">
        <constructor-arg value="com.youama.nexus.*.entity" />
    </bean>

</beans>