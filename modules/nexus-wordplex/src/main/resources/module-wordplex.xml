<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<import resource="Service.xml" />

	<bean id="wordplexWord" class="com.youama.nexus.wordplex.word.service.WordService">
		<property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
	</bean>

	<bean id="wordplexSentence" class="com.youama.nexus.wordplex.word.service.SentenceService">
		<property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
	</bean>

	<bean id="wordplexText" class="com.youama.nexus.wordplex.word.service.TextService">
		<property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
	</bean>

	<bean id="wordplexConnectionWordSentenceText"
		class="com.youama.nexus.wordplex.word.service.ConnectionWordSentenceTextService">
		<property name="sessionFactory" ref="hibernate4AnnotatedSessionFactory" />
	</bean>

</beans>